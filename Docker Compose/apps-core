name: homelab

networks:
  lab_net:
    external: true

services:
  homepage:
    image: ghcr.io/gethomepage/homepage:latest
    container_name: homepage
    restart: unless-stopped
    networks:
      lab_net:
        ipv4_address: 10.10.50.40
    env_file:
      - ../common.env
    volumes:
      - ./homepage-config:/app/config
      - /var/run/docker.sock:/var/run/docker.sock:ro

  glances:
    image: nicolargo/glances:latest
    container_name: glances
    restart: unless-stopped
    networks:
      lab_net:
        ipv4_address: 10.10.50.41
    env_file:
      - ../common.env
    pid: host
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /etc/os-release:/etc/os-release:ro
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
    command: glances -w

  bookstack:
    image: linuxserver/bookstack:latest
    container_name: bookstack
    restart: unless-stopped
    networks:
      lab_net:
        ipv4_address: 10.10.50.42
    env_file:
      - ../common.env
    environment:
      - DB_HOST=bookstack-db
      - DB_USER=bookstack
      - DB_PASS=bookstackpass
      - DB_DATABASE=bookstack
    depends_on:
      - bookstack-db
    volumes:
      - ./bookstack-config:/config
    ports:
      - "6875:80"

  bookstack-db:
    image: mariadb:10.11
    container_name: bookstack-db
    restart: unless-stopped
    networks:
      lab_net:
        ipv4_address: 10.10.50.142
    environment:
      - MYSQL_ROOT_PASSWORD=rootpass
      - MYSQL_DATABASE=bookstack
      - MYSQL_USER=bookstack
      - MYSQL_PASSWORD=bookstackpass
    volumes:
      - ./bookstack-db-data:/var/lib/mysql

  authentik:
    image: ghcr.io/goauthentik/server:latest
    container_name: authentik
    restart: unless-stopped
    networks:
      lab_net:
        ipv4_address: 10.10.50.43
    env_file:
      - ../common.env
    environment:
      - AUTHENTIK_REDIS__HOST=authentik-redis
      - AUTHENTIK_POSTGRESQL__HOST=authentik-db
      - AUTHENTIK_POSTGRESQL__USER=authentik
      - AUTHENTIK_POSTGRESQL__PASSWORD=authentikpass
      - AUTHENTIK_POSTGRESQL__NAME=authentik
      - AUTHENTIK_SECRET_KEY=changeme
    depends_on:
      - authentik-db
      - authentik-redis
    volumes:
      - ./authentik-media:/media
      - ./authentik-custom-templates:/templates
    ports:
      - "9000:9000"

  authentik-db:
    image: postgres:16-alpine
    container_name: authentik-db
    restart: unless-stopped
    networks:
      lab_net:
        ipv4_address: 10.10.50.143
    environment:
      - POSTGRES_USER=authentik
      - POSTGRES_PASSWORD=authentikpass
      - POSTGRES_DB=authentik
    volumes:
      - ./authentik-db-data:/var/lib/postgresql/data

  authentik-redis:
    image: redis:7-alpine
    container_name: authentik-redis
    restart: unless-stopped
    networks:
      lab_net:
        ipv4_address: 10.10.50.144
    volumes:
      - ./authentik-redis-data:/data