name: homelab

networks:
  lab_net:
    external: true

services:
  portainer:
    image: portainer/portainer-ce:latest
    container_name: portainer
    restart: unless-stopped
    networks:
      lab_net:
        ipv4_address: 10.10.50.10
    ports:
      - "9443:9443"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    env_file:
      - ../common.env